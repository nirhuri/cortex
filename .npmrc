# Force pnpm as the package manager
package-manager=pnpm

# Use a single lockfile for the whole monorepo
shared-workspace-lockfile=true

# Strict peer dependencies (recommended)
strict-peer-dependencies=true

# Prevent hoisting of all dependencies
public-hoist-pattern[]=

# Use symlinks for workspace packages
auto-install-peers=true

# Save exact versions instead of ^ or ~
save-exact=true

# Do not generate package-lock.json
package-lock=false

# Optional: disable engine strictness
engine-strict=false